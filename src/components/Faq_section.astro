<script is:inline>
  const toggleAnswer = (questionId, answerId, circleId) => {
    document.getElementById(questionId).addEventListener('click', () => {
      const answer = document.getElementById(answerId);
      const circle = document.getElementById(circleId);

      ['answer1', 'answer2', 'answer3'].forEach(id => {
        if (id !== answerId) {
          document.getElementById(id).classList.add('hidden');
        }
      });

      answer.classList.toggle('hidden');

      if (answer.classList.contains('hidden')) {
        circle.style.backgroundImage = "url('/assets/Down.png')";
      } else {
        circle.style.backgroundImage = "url('/assets/Up.png')";
      }

      ['answer1', 'answer2', 'answer3'].forEach(id => {
        if (id !== answerId) {
          document.getElementById(id).classList.add('hidden');
          document.getElementById(`circle${id.slice(-1)}`).style.backgroundImage = "url('/assets/Down.png')";
        }
      });
    });
  };

  document.getElementById('answer1').classList.remove('hidden');
  document.getElementById('circle1').style.backgroundImage = "url('/assets/Up.png')";
  toggleAnswer('close_question1', 'answer1', 'circle1');
  toggleAnswer('close_question2', 'answer2', 'circle2');
  toggleAnswer('close_question3', 'answer3', 'circle3');


</script>